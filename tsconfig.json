{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "lib/**/*.ts",
    "runner/**/*.ts",
    "services/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "console"
  ]
}


